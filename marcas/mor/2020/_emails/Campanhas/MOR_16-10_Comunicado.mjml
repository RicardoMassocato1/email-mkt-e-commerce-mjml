  <mj-body background-color="#ffffff">
    <mj-include path="../../header/_header.mjml" />
    
    <mj-section padding="30px 0px 0px 0px" background-color="#efe7df">
      <mj-column>
        <mj-text font-family="Roboto, serif" text-transform="uppercase" color="#604f42" font-size="26px" padding="20px 0px 0px 0px" align="center" font-weight="900" line-height="37px" letter-spacing="5px">
